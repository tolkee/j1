{
  "name": "jarvis-convex",
  "version": "1.0.0",
  "description": "Jarvis Convex Backend",
  "private": true,
  "scripts": {
    "dev": "convex dev",
    "deploy": "convex deploy",
    "test": "vitest",
    "test:once": "vitest run",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "test:ui": "vitest --ui",
    "sync-api": "npx convex-helpers ts-api-spec --output-file api && bash scripts/sync-api.sh"
  },
  "dependencies": {
    "@auth/core": "^0.39.1",
    "@convex-dev/auth": "^0.0.87",
    "convex": "^1.24.6"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.0",
    "convex-test": "^0.0.37",
    "typescript": "^5.7.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.0"
  }
}